#
#--------------------------------------------------------------------------
# hfish 2.6-client
#--------------------------------------------------------------------------
#

FROM chinayin/debian:bullseye-slim

ENV HFISH_VERSION 2.6.2

RUN set -eux; \
  install_packages curl net-tools wget telnet iputils-ping vim; \
  arch="$(dpkg --print-architecture)"; \
	case "$arch" in \
		'amd64') \
			arch2='linux-386'; \
			;; \
		'arm64') \
			arch2='linux-arm'; \
			;; \
		*) echo >&2 "error: unsupported architecture: '$arch'"; exit 1 ;; \
	esac; \
	downloadUrl='https://hfish.cn-bj.ufileos.com/hfish-${HFISH_VERSION}-linux-amd64.tar.gz'; \
  #
  curl -fskSL -o hfish.tgz "$downloadUrl"; \
  tar -zxvf hfish.tgz -C /tmp/hfish; \
  rm -f hfish.tgz; \
  #
  mkdir -p /opt/hfish/client; \
  cp /tmp/hfish/services /opt/hfish/client; \
  cp /tmp/hfish/packages/$arch2/client /opt/hfish/client; \
  chown a+x /opt/hfish/client; \
  rm -rf /tmp/hfish; \

  echo 'success';

#COPY entrypoint.sh /entrypoint.sh

WORKDIR /opt/hfish/client

EXPOSE 21 22 23 69 80 443 3306 5900 6379 8080 8081 8989 9000 9001 9090 9096 9200 11211

#ENTRYPOINT ["/entrypoint.sh"]
